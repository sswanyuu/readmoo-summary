{
  "name": "readmoo-summary-extension",
  "version": "1.0.0",
  "description": "A Chrome Extension v3 for intelligent content summarization on Readmoo pages",
  "main": "dist/background.js",
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "watch": "webpack --mode=development --watch",
    "clean": "rimraf dist",
    "icons": "node scripts/create-icons.js",
    "prebuild": "npm run clean",
    "postinstall": "npm run icons",
    "dev": "npm run build:dev && npm run watch",
    "package": "npm run build && web-ext build",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html,json}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "start": "npm run build:dev && npm run watch"
  },
  "keywords": [
    "chrome-extension",
    "readmoo",
    "summarization",
    "content-analysis",
    "browser-extension",
    "manifest-v3"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/readmoo-summary-extension.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/readmoo-summary-extension/issues"
  },
  "homepage": "https://github.com/your-username/readmoo-summary-extension#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^6.1.1",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "web-ext": "^7.8.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ]
  },
  "webExt": {
    "sourceDir": "dist",
    "artifactsDir": "web-ext-artifacts",
    "ignoreFiles": [
      "package.json",
      "package-lock.json",
      "node_modules",
      "tests",
      "*.md"
    ]
  },
  "directories": {
    "test": "tests"
  }
}
