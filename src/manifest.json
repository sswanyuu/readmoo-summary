{
  "manifest_version": 3,
  "name": "Readmoo Summary Extension",
  "version": "1.0.0",
  "description": "A Chrome extension for summarizing content from Readmoo",
  "permissions": ["activeTab", "storage", "scripting", "webRequest"],
  "host_permissions": ["https://readmoo.com/*", "*://reader.readmoo.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://readmoo.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Readmoo Summary",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
